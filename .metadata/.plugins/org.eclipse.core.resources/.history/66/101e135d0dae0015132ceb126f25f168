<script>
var x = 0;
var y = 0;
var z = 0;
function calc(obj) {
    var e = obj.id.toString();
    if (e == 'cost') {
        x = Number(obj.value);
        y = Number(document.getElementById('quantity').value);
    } else {
        x = Number(document.getElementById('cost').value);
        y = Number(obj.value);
    }
    z = x * y;
    document.getElementById('total').value = z;
    document.getElementById('update').innerHTML = z;
}

</script>
